function fish_prompt
    set -l pointer_color red
    #test $status = 0; and set pointer_color yellow
    test $status = 0; and set pointer_color purple

    set -q __fish_git_prompt_showupstream
    or set -g __fish_git_prompt_showupstream auto

    if not set -q VIRTUAL_ENV_DISABLE_PROMPT
        set -g VIRTUAL_ENV_DISABLE_PROMPT true
    end

    #set_color yellow
    set_color purple
    printf '['
    printf '%s@%s' $USER $hostname
    set_color normal
    printf ' in '

    set_color $fish_color_cwd
    set -l fish_prompt_pwd_dir_length 0
    #printf '%s' (prompt_pwd --dir-length=0)
    printf '%s' (prompt_pwd)
    printf ']'
    set_color normal

    # git
    set_color white -d
    set -l prompt_git (fish_git_prompt '%s')
    test -n "$prompt_git"
    and printf ' %s' $prompt_git
    set_color normal

    # Line 2
    echo
    set_color $pointer_color
    #printf 'Â» '
    printf '$ '
    set_color normal
end
